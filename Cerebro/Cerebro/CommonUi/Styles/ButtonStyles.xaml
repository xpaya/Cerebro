<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="MyButtonStylePrimary">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Width" Value="200" />
        <Setter Property="Background" Value="{StaticResource XMenOrange}"/>
        <Setter Property="Foreground" Value="{StaticResource XMenRed}"/>
    </Style>
</ResourceDictionary>
