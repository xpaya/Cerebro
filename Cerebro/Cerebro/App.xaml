<Application
    x:Class="Cerebro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cerebro"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="XMenRed">#FF0000</SolidColorBrush>
            <SolidColorBrush x:Key="XMenOrange">#F19919</SolidColorBrush>
            <SolidColorBrush x:Key="XMenBackGroundColor">LightSlateGray</SolidColorBrush>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///CommonUi/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="ms-appx:///CommonUi/Styles/ListviewStyle.xaml"/>
                <ResourceDictionary Source="ms-appx:///CommonUi/Styles/TextStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
